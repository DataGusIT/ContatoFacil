@model AlterarSenhaModel
@{
    ViewData["Title"] = "Alterar senha do usuário";
}

<style>
    /* Estilos de animação de fundo */
    body {
        font-family: 'Poppins', sans-serif;
        line-height: 1.6;
        color: #ddd;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #121212 0%, #2e2e38 50%, #3d3d52 100%);
        background-size: 300% 300%;
        animation: gradientShift 12s ease infinite;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .container {
        margin-top: 60px;
    }

    h1 {
        color: #e0e0e0;
        margin-bottom: 25px;
    }

    .form-label {
        color: #d4d4d4;
        text-align: left;
    }

    .form-control {
        background-color: #252535;
        color: #ddd;
        border: 1px solid #444;
        transition: box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #5a5ad6;
            box-shadow: 0 0 10px rgba(90, 90, 214, 0.4);
        }

        .form-control::placeholder {
            color: #888;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        padding: 12px;
        border-radius: 5px;
        transition: all 0.3s;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
    }

    /* Botão Alterar */
    .btn-primary {
        background-color: #5a5ad6;
        border-color: #5a5ad6;
        color: #fff;
        width: 100%;
        margin-bottom: 10px;
    }

        .btn-primary:hover {
            background-color: #4848b2;
        }

    /* Botão Voltar com cor diferente */
    .btn-secondary-custom {
        background-color: #444;
        border-color: #444;
        color: #ddd;
        width: 100%;
        margin-bottom: 10px;
    }

        .btn-secondary-custom:hover {
            background-color: #666;
        }

    .alert-success, .alert-danger {
        background-color: #1e1e1e;
        color: #ddd;
        border: 1px solid #333;
    }

        .alert-success .btn-close, .alert-danger .btn-close {
            background-color: transparent;
            color: #ddd;
        }

    .form-container {
        text-align: left;
    }
</style>




<div class="container">
    <div class="text-center">
        <h1 class="display-4">Alterar senha do usuário</h1>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="form-container">
        <form asp-controller="AlterarSenha" asp-action="Alterar" method="post">
            <div class="form-group mb-3">
                <label for="senhaAtual" class="form-label">Senha Atual</label>
                <input type="password" asp-for="SenhaAtual" class="form-control" placeholder="Digite a senha atual do usuário">
                @Html.ValidationMessageFor(x => x.SenhaAtual, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="novaSenha" class="form-label">Nova Senha</label>
                <input type="password" asp-for="NovaSenha" class="form-control" placeholder="Digite a nova senha do usuário">
                @Html.ValidationMessageFor(x => x.NovaSenha, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="confirmarSenha" class="form-label">Confirmar Nova Senha</label>
                <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" placeholder="Confirme a nova senha do usuário">
                @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Alterar</button>
            <a class="btn btn-secondary-custom" asp-action="Index" asp-controller="Home" role="button">Voltar</a>


        </form>
    </div>
</div>
